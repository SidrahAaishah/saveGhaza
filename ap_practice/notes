/* Accessing elements by ID
let container = document.getElementById("container");
let inputField = document.getElementById("inputField");
let submitButton = document.getElementById("submitButton");

// Accessing elements by class name
let paragraphs = document.getElementsByClassName("paragraph");

// Accessing elements by tag name
let headings = document.getElementsByTagName("h1");

// Accessing elements using querySelector
let firstParagraph = document.querySelector("p"); // selects the first <p> element
let allParagraphs = document.querySelectorAll("p"); // selects all <p> elements

// Accessing elements using querySelectorAll with class name
let paragraphsWithClass = document.querySelectorAll(".paragraph");

// Accessing elements using querySelectorAll with attribute
let inputsWithTypeText = document.querySelectorAll("input[type='text']");
